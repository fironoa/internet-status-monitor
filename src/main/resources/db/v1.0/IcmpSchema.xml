<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

<changeSet id="create-icmp-table-001" author="firoz">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="icmp_entity"/>
            </not>
        </preConditions>

        <createTable tableName="icmp_entity">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="timestamp" type="timestamp"/>
            <column name="packets_sent" type="int"/>
            <column name="packets_received" type="int"/>
            <column name="packet_loss_percentage" type="numeric"/>
            <column name="min_rtt" type="numeric"/>
            <column name="max_rtt" type="numeric"/>
            <column name="avg_rtt" type="numeric"/>
            <column name="packets" type="jsonb"/>
        </createTable>
    </changeSet>
    <changeSet id="add-client-field-002" author="firoz">
        <addColumn tableName="icmp_entity">
            <column name="client" type="varchar(255)"/> <!-- Choose an appropriate length -->
        </addColumn>
    </changeSet>
    <!-- Additional changeSets here as needed... -->

</databaseChangeLog>
